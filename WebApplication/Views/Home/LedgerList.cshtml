@using WebApplication.Models.ViewModel
@model List<LedgerViewModel>
@{ 
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int index = 1;
                    foreach(var item in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@(item.Type == LedgerType.income ? "收入" : "支出")</td>
                            <td>@item.Date.ToString("yyyy-MM-dd")</td>
                            <td>@item.Money.ToString("N0")</td>
                        </tr>

                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>